<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--登录头部样式-->
    <style name="title_relayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <!--登录头文字标题样式-->
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="back_btn">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/back</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="back_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/back</item>\
        <item name="android:clickable">true</item>
        <item name="android:textColor">#00AFEF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--这里是订餐的style样式内容，新增的一个dimen。xml也是这个里面需要的内容-->
    <style name="main_tab_bottom">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!--<style name="bus_view">
        <item name="@android:windowEnterAnimation">@anim/in</item>
        <item name="@android:windowExitAnimation">@anim/out</item>
    </style>-->
    <!--这里是搜索框的设计样式内容-->
    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_edit_bg</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
